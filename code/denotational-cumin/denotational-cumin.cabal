category:            Language
build-type:          Simple
-- extra-source-files:  
cabal-version:       >=1.10

library
  exposed-modules:    Language.CuMin.Semantics.Denotational
  ghc-options:        -Wall
  ghc-prof-options:   -O2
                      -fprof-auto
  -- other-modules:       
  -- other-extensions:
  build-depends:       base                 ==4.7.*
                     , text                 ==1.1.*
                     , lens                 ==4.4.*
                     , mtl                  ==2.1.*
                     , containers           ==0.5.*
                     , unordered-containers ==0.2.*
                     , logict               ==0.6.*
